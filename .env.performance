# 性能优化环境变量配置

# 应用设置
APP_DEBUG=false
APP_TRACE=false

# 数据库设置

# 数据库配置 / Database configuration
DATABASE_TYPE=mysql
DATABASE_HOSTNAME=127.0.0.1
DATABASE_DATABASE=aichat_ui
DATABASE_USERNAME=root
DATABASE_PASSWORD=
DATABASE_HOSTPORT=3306
DATABASE_CHARSET=utf8mb4
DB_FIELDS_CACHE=true
DB_PERSISTENT=true

# 缓存设置
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=cache:
REDIS_TIMEOUT=0
REDIS_POOL_SIZE=10
REDIS_PERSISTENT=true

# 会话设置
SESSION_DRIVER=redis
SESSION_EXPIRE=7200
SESSION_PREFIX=think
SESSION_AUTO_START=true
SESSION_USE_COOKIES=true
SESSION_USE_ONLY_COOKIES=true
SESSION_USE_STRICT_MODE=true
SESSION_CACHE_LIMITER=nocache
REDIS_SESSION_DB=1
REDIS_SESSION_PREFIX=session:

# 路由设置
ROUTE_CHECK_CACHE=true
ROUTE_CACHE_TYPE=redis
ROUTE_CACHE_PREFIX=route:
ROUTE_CACHE_EXPIRE=86400

# 日志设置
LOG_CHANNEL=file
LOG_LEVEL=error
LOG_MAX_FILES=30

# 调试设置
DEBUG_LOG_ENABLED=false
